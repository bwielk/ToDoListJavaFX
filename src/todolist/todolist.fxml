<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.text.Font?>
<BorderPane fx:controller="todolist.Controller"
            xmlns:fx="http://javafx.com/fxml" >
    <left>
        <ListView fx:id="listViewPane" onMouseClicked="#handleClickListView">
        </ListView>
    </left>
    <center>
        <VBox>
            <TextArea fx:id="toDoItemView"/>
            <HBox>
                <VBox>
                    <Label fx:id="taskTitle">
                        <font>
                            <Font name="Arial black" size="25"/>
                        </font>
                    </Label>
                    <Label fx:id="taskCreated">
                        <font>
                            <Font name="Arial" size="16"/>
                        </font>
                    </Label>
                    <Label fx:id="taskDeadline">
                        <font>
                            <Font name="Arial" size="18"/>
                        </font>
                    </Label>
                </VBox>
            </HBox>
        </VBox>
    </center>
</BorderPane>